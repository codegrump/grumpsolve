sketch Trapezoid {
    
    variable base, height, top, topOffset; #variables who are not initialized
    LinearRing ring;
    
    constructor (){
        this.base := vinit(1),
        this.height := vinit(1),
        this.top := vinit(1),
        this.topOffset := vinit(0);
        initRing();
    }
    
    constructor a (variable base, variable height, variable top, variable topOffset){
        this.base := base,
        this.height := height,
        this.top := top,
        this.topOffset := topOffset;
        initRing();
    }
    
    initRing(){
        this.ring := this.linearRing([
                new Point(0.0, 0.0), 
                new Point(topOffset, height), 
                new Point(topOffset+top, height),
                new Point(base, 0.0)]);
    }
}

//has 2 degrees of freedom from translation
Trapezoid t0 := new Trapezoid(2, 1, 2, 1) norotate; //construction modifiers are (no)rotate (no)translate (no)scale - default modifiers are rotate, translate, noscale 
constraint t0.ring[0] = new Point(1.0, 1.0);

Trapezoid t1 := new Trapezoid();
constraint t1.ring[0] = t0.ring[2],
           t1.ring[3] = t0.ring[3],
           t1.base = t1.top,
           t1.height = t1.base / 2,
           t1.topOffset = t1.base / 2;
