#defines x,y,z who are some radius away from the origin, except with an input parameter this time

define xyz extends sketch(radius) {
    parameter x, y;
    
    constraint square(x) + square(y) = square(radius);
};

constant myRadius := PI;
pointOnSphere0 := xyz(myRadius);
pointOnSphere1 := xyz(PI) { x = 2 * y; };
pointOnSphere2 := xyz(myRadius) { x = PI; };
